{
  "name": "simple-add-mcp-server",
  "version": "1.0.0",
  "description": "MCP Server ツール定義変更検知デモンストレーション",
  "main": "add.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node server.js",
    "test": "npm run test:all",
    "test:all": "node add.test.js && node security-utils.test.js && node client-validator.test.js && node server.test.js && node client-hash-monitor.test.js",
    "test:add": "node add.test.js",
    "test:security": "node security-utils.test.js",
    "test:validator": "node client-validator.test.js",
    "test:server": "node server.test.js",
    "test:hash-monitor": "node client-hash-monitor.test.js",
    "server": "node server.js",
    "demo-secure": "node demo-secure-client.js",
    "lint": "eslint *.ts",
    "lint:fix": "eslint *.ts --fix",
    "format": "npx prettier --write \"**/*.ts\"",
    "validate": "node client-validator.js validate",
    "list": "node client-validator.js list"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "1.13.2",
    "express": "^4.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "eslint": "^8.56.0",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^7.0.0"
  }
}
